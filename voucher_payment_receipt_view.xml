<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <!-- Supplier Payment -->
    <record id="view_vendor_payment_retention_form" model="ir.ui.view">
      <field name="name">account.voucher.payment.retention.form.inherit</field>
      <field name="model">account.voucher</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="l10n_ar_account_payment.view_vendor_l10n_ar_payment_form"/>
      <field name="arch" type="xml">
          <page string="Journal Items" position="before">
            <page string="Retentions">
              <separator string="Applied Retentions"/>
              <field name="retention_ids" nolabel="1" on_change="onchange_retentions(retention_ids, context)">
                <tree string="Retention Lines">
                  <field name="date" />
                  <field name="retention_id" string="Retention Type" />
                  <field name="certificate_no" />
                  <field name="base" />
                  <field name="amount" />
                  <field name="state_id" />
                </tree>
                <form string="Retention Line" version="7.0">
                  <sheet>
                      <h1>
                          <label string="Retention Lines"/>
                      </h1>
                      <group>
                        <group>
                          <field name="retention_id" domain="[('type_tax_use', '=', 'purchase')]" on_change="onchange_retention(retention_id, context)"/>
                          <field name="name"/>
                          <field name="certificate_no"/>
                        </group>
                        <group>
                          <field name="state_id" />
                          <field name="date" />
                          <label string="Keep it empty if the date is the same as the voucher." />
                        </group>
                      </group>
                      <group>
                        <separator string="Amount" colspan="4"/>
                        <field name="base"/>
                        <field name="amount"/>
                      </group>
                      <field name="account_id" invisible="1" />
                      <field name="base_code_id" invisible="1" />
                      <field name="tax_code_id" invisible="1" />
                    </sheet>
                </form>
              </field>
            </page>
          </page>
      </field>
    </record>

    <!-- Customer Payment -->
    <record id="view_vendor_receipt_retention_form" model="ir.ui.view">
      <field name="name">account.voucher.receipt.retention.form.inherit</field>
      <field name="model">account.voucher</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="l10n_ar_account_payment.view_vendor_l10n_ar_receipt_form"/>
      <field name="arch" type="xml">
          <page string="Journal Items" position="before">
            <page string="Retentions">
              <separator string="Supported Retentions"/>
              <field name="retention_ids" nolabel="1" on_change="onchange_retentions(retention_ids, context)">
                <tree string="Retention Lines">
                  <field name="date"/>
                  <field name="retention_id" string="Retention Type"/>
                  <field name="certificate_no"/>
                  <field name="base"/>
                  <field name="amount"/>
                </tree>
                <form string="Retention Lines" version="7.0">
                  <sheet>
                      <h1>
                          <label string="Retention Lines"/>
                      </h1>
                      <group>
                        <group>
                          <field name="retention_id" domain="[('type_tax_use', '=', 'sale')]" on_change="onchange_retention(retention_id, context)"/>
                          <field name="name"/>
                          <field name="certificate_no"/>
                        </group>
                        <group>
                          <field name="state_id" />
                          <field name="date" />
                          <label string="Keep it empty if the date is the same as the voucher." />
                        </group>
                      </group>
                      <group>
                        <separator string="Amount" colspan="4"/>
                        <field name="base"/>
                        <field name="amount"/>
                      </group>
                      <field name="account_id" invisible="1" />
                      <field name="base_code_id" invisible="1" />
                      <field name="tax_code_id" invisible="1" />
                  </sheet>
                </form>
              </field>
            </page>
          </page>
      </field>
    </record>

  </data>
</openerp>
