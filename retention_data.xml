<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

  <!-- TODO: Hacer esto como templates para luego ser instalado, deberia estar en el modulo de localizacion -->
  <!-- Retenciones Tax Code -->
  <record id="retencion_iva" model="account.tax.code">
    <field name="name">Retencion IVA</field>
    <field name="code">50</field>
    <field name="parent_id" ref="l10n_ar_chart_of_account.vat_code_chart_root"/>
    <field name="sign">1.0</field>
  </record>

  <record id="retencion_iva_ventas" model="account.tax.code">
    <field name="name">Retencion IVA Ventas</field>
    <field name="code">501</field>
    <field name="parent_id" ref="retencion_iva"/>
    <field name="sign">-1.0</field>
  </record>

  <record id="retencion_iva_compras" model="account.tax.code">
    <field name="name">Retencion IVA Compras</field>
    <field name="code">502</field>
    <field name="parent_id" ref="retencion_iva"/>
    <field name="sign">1.0</field>
  </record>

  <record id="retencion_iva_saldo_favor" model="account.tax.code">
    <field name="name">Retencion IVA Saldo a Favor</field>
    <field name="code">503</field>
    <field name="parent_id" ref="retencion_iva"/>
    <field name="sign">-1.0</field>
  </record>

  <record id="operaciones_con_retencion" model="account.tax.code">
    <field name="name">Operaciones con Retencion</field>
    <field name="parent_id" ref="l10n_ar_chart_of_account.vat_code_chart_root"/>
    <field name="sign">1.0</field>
  </record>

  <record id="operaciones_con_retencion_iva" model="account.tax.code">
    <field name="name">Operaciones con Retencion IVA</field>
    <field name="code">60</field>
    <field name="parent_id" ref="operaciones_con_retencion"/>
    <field name="sign">1.0</field>
  </record>

  <record id="venta_con_retencion_iva" model="account.tax.code">
    <field name="name">Venta con Retencion IVA</field>
    <field name="code">601</field>
    <field name="parent_id" ref="operaciones_con_retencion_iva"/>
    <field name="sign">1.0</field>
  </record>

  <record id="compra_con_retencion_iva" model="account.tax.code">
    <field name="name">Compra con Retencion IVA</field>
    <field name="code">602</field>
    <field name="parent_id" ref="operaciones_con_retencion_iva"/>
    <field name="sign">1.0</field>
  </record>

  <!-- Retenciones Accounts -->
  <record id="retencion_iva_credito_fiscal" model="account.account">
    <field name="code">212051</field>
    <field name="reconcile" eval="False"/>
    <field name="parent_id" ref="l10n_ar_chart_of_account.deudas_fiscales"/>
    <field name="type">other</field>
    <field name="name">Retenciones IVA CF</field>
    <field name="user_type" ref="l10n_ar_chart_of_account.account_type_tax"/>
  </record>

  <record id="retencion_iva_debito_fiscal" model="account.account">
    <field name="code">114051</field>
    <field name="reconcile" eval="False"/>
    <field name="parent_id" ref="l10n_ar_chart_of_account.otros_creditos"/>
    <field name="type">other</field>
    <field name="name">Retenciones IVA DF</field>
    <field name="user_type" ref="l10n_ar_chart_of_account.account_type_tax"/>
  </record>

  <record id="retencion_iva_saldo_a_pagar" model="account.account">
    <field name="code">212053</field>
    <field name="reconcile" eval="False"/>
    <field name="parent_id" ref="l10n_ar_chart_of_account.deudas_fiscales"/>
    <field name="type">other</field>
    <field name="name">Retenciones IVA SAP</field>
    <field name="user_type" ref="l10n_ar_chart_of_account.account_type_tax"/>
  </record>

  <record id="retencion_iva_saldo_a_favor" model="account.account">
    <field name="code">114052</field>
    <field name="reconcile" eval="False"/>
    <field name="parent_id" ref="l10n_ar_chart_of_account.otros_creditos"/>
    <field name="type">other</field>
    <field name="name">Retenciones IVA SAF</field>
    <field name="user_type" ref="l10n_ar_chart_of_account.account_type_tax"/>
  </record>

  <!-- Retenciones Taxes -->
  <record id="tax_retencion_iva_cf" model="account.tax">
    <field name="name">Retenciones IVA Credito Fiscal (Compras)</field>
    <field name="description">Retenciones IVA CF</field>
    <field name="sequence">30</field>
    <field name="type">none</field>
    <field name="account_collected_id" ref="retencion_iva_credito_fiscal"/>
    <field name="account_paid_id" ref="retencion_iva_credito_fiscal"/>
    <field name="base_code_id" ref="compra_con_retencion_iva"/>
    <field name="tax_code_id" ref="retencion_iva_compras"/>
    <field eval="1.0" name="tax_sign"/>
    <field eval="1.0" name="base_sign"/>
    <!--
    <field name="ref_base_code_id" ref="operaciones_con_retencion_iva"/>
    <field name="ref_tax_code_id" ref="retencion_iva_compras"/>
    <field eval="-1.0" name="ref_tax_sign"/>
    <field eval="-1.0" name="ref_base_sign"/>
    -->
    <field name="type_tax_use">purchase</field>
  </record>

  <record id="tax_retencion_iva_df" model="account.tax">
    <field name="name">Retenciones IVA Debito Fiscal (Ventas)</field>
    <field name="description">Retenciones IVA DF</field>
    <field name="sequence">31</field>
    <field name="type">none</field>
    <field name="account_collected_id" ref="retencion_iva_debito_fiscal"/>
    <field name="account_paid_id" ref="retencion_iva_debito_fiscal"/>
    <field name="base_code_id" ref="venta_con_retencion_iva"/>
    <field name="tax_code_id" ref="retencion_iva_ventas"/>
    <field eval="1.0" name="tax_sign"/>
    <field eval="1.0" name="base_sign"/>
    <!--
    <field name="ref_base_code_id" ref="venta_con_retencion_iva"/>
    <field name="ref_tax_code_id" ref="retencion_iva_ventas"/>
    <field eval="-1.0" name="ref_tax_sign"/>
    <field eval="-1.0" name="ref_base_sign"/>
    -->
    <field name="type_tax_use">sale</field>
  </record>

  <record id="retention_retention_iva_ventas" model="retention.retention">
    <field name="name">Retencion IVA Ventas</field>
    <field name="tax_id" ref="tax_retencion_iva_df" />
  </record>

  <record id="retention_retention_iva_compras" model="retention.retention">
    <field name="name">Retencion IVA Compras</field>
    <field name="tax_id" ref="tax_retencion_iva_cf" />
  </record>

  </data>
</openerp>
